    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h2 class="modal-title text-center">Add a new question</h2>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" _lpchecked="1">
                    <fieldset>
                        <legend>Question Body</legend>
                        <div class="form-group">
                            <div class="col-md-12">
                                <textarea style="max-width:1000px; resize: vertical" class="form-control" rows="3" id="textArea"></textarea>
                            </div>
                        </div>
                    </fieldset>
                    <fieldset>
                        <legend>Answers</legend>
                        <div class="form-group">
                            <div class="col-md-12">
                                <textarea style="max-width:1000px; resize: vertical" class="form-control" rows="3" id="textArea"></textarea>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
